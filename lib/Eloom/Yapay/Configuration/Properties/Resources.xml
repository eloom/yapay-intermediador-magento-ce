<?xml version="1.0"?>
<Resources>
    <path>
        <protocol>https</protocol>
        <webservice>
            <environment>
                <production>
                    <url>api.intermediador.yapay.com.br</url>
                </production>
                <sandbox>
                    <url>api.intermediador.sandbox.yapay.com.br</url>
                </sandbox>
            </environment>
        </webservice>
    </path>
    <services>
        <authorization>
            <create>
                <request>api/v1/reseller/authorizations/create</request>;
            </create>
            <token>
                <request>api/v1/authorizations/access_token</request>
            </token>
        </authorization>
        <transaction>
            <search>
                <request>v3/transactions/get_by_token</request>
            </search>
            <cancel>
                <request>api/v3/transactions/cancel</request>
            </cancel>
        </transaction>
        <directPayment>
            <request>api/v3/transactions/payment</request>
        </directPayment>
    </services>
</Resources>